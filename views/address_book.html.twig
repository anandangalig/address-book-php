<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Address Book</title>
  </head>
  <body>
    <div class="container jumbotron">
      <h1>Address Book</h1><hr>

      {% if existing_contacts is not empty %}
        <h2>Existing Contacts:</h2>
        {% for contact in existing_contacts %}
          <ul>
            <h3>{{contact.getName}}</h3>
            <li>{{contact.getNumber}}</li>
            <li>{{contact.getAddress}}</li>
          </ul><hr>
        {% endfor %}
      {% endif %}

      <form action='/delete_contacts'>
        <button type='submit' class='btn btn-danger'>Delete All Contacts</button>
      </form>

      <h2>Create New Contact:</h2>
      <form action='/create_contact' method='post'>
        <label for='input_name'>Name:</label>
        <input class='form-control' id='input_name' name='input_name' type='text' placeholder="Battuya Bayarmagnai"><br>

        <label for='input_number'>Phone Number:</label>
        <input class='form-control' id='input_number' name='input_number' type='text' placeholder='555-555-5555' ><br>

        <label for='input_address'>Address:</label>
        <input class='form-control' id='input_address' name='input_address' type='text' placeholder='UNJIIDAAAA!'><br>

        <button type='submit' class='btn btn-info'>Create</button>
      </form>
    </div>
  </body>
</html>
